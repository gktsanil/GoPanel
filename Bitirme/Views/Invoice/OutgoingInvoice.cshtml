@using Bitirme.Models.ViewModels
@model InvoiceModel
@{
    ViewBag.Title = "Giden Faturalar";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- <div class="panel-heading">
                DataTables Advanced Tables
            </div>
             /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Fatura No.</th>
                            <th>Cari</th>
                            <th>Tutar</th>
                            <th>Vergi</th>
                            <th>Vergi Dahil Tutar</th>
                            <th>Fatura Tar.</th>
                            <th>Notlar</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model.Invoices)
                        {
                            if (invoice.InvoiceType == 1)
                            {
                                if (invoice.InvoiceID % 2 == 0)
                                {
                                    <tr class="odd gradeX">
                                        <td>@invoice.InvoiceID</td>
                                        <td>@invoice.InvoiceNumber</td>
                                        <td>@invoice.CustomerName</td>
                                        <td>@invoice.Cost</td>
                                        <td>@invoice.TaxRate</td>
                                        <td>@invoice.TotalCost</td>
                                        <td>@invoice.InvoiceDate</td>
                                        <td>@invoice.InvoiceDescription</td>
                                        <td> <a href="#" class="btn btn-circle btn-warning"> <i class="fa fa-eye"></i> </a></td>
                                    </tr>
                                }
                                else
                                {
                                    <tr class="odd gradeX">
                                        <td>@invoice.InvoiceID</td>
                                        <td>@invoice.InvoiceNumber</td>
                                        <td>@invoice.CustomerName</td>
                                        <td>@invoice.Cost</td>
                                        <td>@invoice.TaxRate</td>
                                        <td>@invoice.TotalCost</td>
                                        <td>@invoice.InvoiceDate</td>
                                        <td>@invoice.InvoiceDescription</td>
                                        <td> <a href="#" class="btn btn-circle btn-warning"> <i class="fa fa-eye"></i> </a></td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<!-- DataTables JavaScript -->
<script src="../HTML/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="../HTML/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="../HTML/vendor/datatables-responsive/dataTables.responsive.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

