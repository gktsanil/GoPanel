@using Bitirme.Models.ViewModels
@model CustomerModel
@{
    ViewBag.Title = "Kurumsal Cari Düzenle";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- <div class="panel-heading">
         Cari Düzenle
     </div>
      /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cari No</th>
                            <th>Cari Ünvanı</th>
                            <th>Cari Türü</th>
                            <th>Cari Alacak</th>
                            <th>Cari Borç</th>
                            <th>Cari Telefon</th>
                            <th>Notlar</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            if (customer.CustomerType == 1)
                            {
                                        <tr class="odd gradeX">
                                            <td>@customer.CustomerID</td>
                                            <td>@customer.CustomerNo</td>
                                            <td>@customer.CustomerName</td>
                                            <td>@customer.CustomerType</td>
                                            <td>@customer.CustomerCredit</td>
                                            <td>@customer.CustomerDept</td>
                                            <td>@customer.CustomerPhone</td>
                                            <td>@customer.CustomerNotes</td>
                                            <td><a href="#" class="btn btn-circle btn-primary"> <i class="fa fa-bars"></i> </a></td>
                                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<!-- DataTables JavaScript -->
<script src="../HTML/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="../HTML/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="../HTML/vendor/datatables-responsive/dataTables.responsive.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>