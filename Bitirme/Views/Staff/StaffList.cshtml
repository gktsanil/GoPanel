@using Bitirme.Models.ViewModels
@model StaffModel
@{
    ViewBag.Title = "Personel Listesi";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!--  <div class="panel-heading">
         Personel Listesi
     </div>
    /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>İsim</th>
                            <th>Pozisyon</th>
                            <th>İletişim</th>
                            <th>Kimlik No</th>
                            <th>Dokuman</th>
                            <th>Notlar</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staff in Model.Staffs)
                        {
                            if (staff.StaffID%2==2)
                            {
                                <tr class="odd gradeX">
                                    <td>@staff.StaffID</td>
                                    <td>@staff.StaffName</td>
                                    <td>@staff.StaffPosition</td>
                                    <td>@staff.StaffPhone</td>
                                    <td>@staff.StaffIdentityNumber</td>
                                    <td>@staff.Documents</td>
                                    <td>@staff.Notes</td>
                                    <td><a href="#" class="btn btn-circle btn-primary"> <i class="fa fa-rocket"></i> </a></td>
                                </tr>
                            }
                            else
                            {
                                <tr class="odd gradeX">
                                    <td>@staff.StaffID</td>
                                    <td>@staff.StaffName</td>
                                    <td>@staff.StaffPosition</td>
                                    <td>@staff.StaffPhone</td>
                                    <td>@staff.StaffIdentityNumber</td>
                                    <td>@staff.Documents</td>
                                    <td>@staff.Notes</td>
                                    <td><a href="#" class="btn btn-circle btn-primary"> <i class="fa fa-rocket"></i> </a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<!-- DataTables JavaScript -->
<script src="../HTML/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="../HTML/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="../HTML/vendor/datatables-responsive/dataTables.responsive.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>


