@using Bitirme.Models.ViewModels
@model StaffModel
@{
    ViewBag.Title = "Mesai - Ek Ödeme";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- <div class="panel-heading">
         Mesai Ek Ödeme Listesi
     </div>
      /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Personel Adı</th>
                            <th>Mesai Ücreti</th>
                            <th>Tarih</th>
                            <th>Döküman</th>
                            <th>Notlar</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments)
    {
        if (payment.PaidType == 0)
        {

                    <tr class="odd gradeX">
                        <td>@payment.PaymentID</td>
                        <td>@payment.PaidName</td>
                        <td>@payment.PaidCost</td>
                        <td>@payment.PaidDate</td>
                        <td>@payment.SlipPath</td>
                        <td>@payment.PaymentDescription</td>
                        <td><a href="#" class="btn btn-circle btn-primary"> <i class="fa fa-bars"></i> </a></td>
                    </tr>

}
}
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<!-- DataTables JavaScript -->
<script src="../HTML/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="../HTML/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="../HTML/vendor/datatables-responsive/dataTables.responsive.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

