@using Bitirme.DBModel.Entity
@model IEnumerable<User>

@{
    ViewBag.Title = "Yeni Kullanıcı Ekle";
}


<!-- jQuery -->
<script src="../HTML/vendor/jquery/jquery.min.js"></script>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Kullanıcı Bilgileri
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" method="post" action="@Url.Action("AddNewUser", "User")">
                            <div class="form-group">
                                <label>Kullanıcı İsim</label>
                                <input class="form-control" name="name">
                                <p class="help-block">Lütfen kullanıcının adını yazınız.</p>
                            </div>
                            <div class="form-group input-group">
                                <input type="password" class="form-control" name="password">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </span>
                            </div>
                            <div class="form-group">
                                <label>Kullanıcı Email</label>
                                <input class="form-control" name="email">
                                <p class="help-block">Lütfen kullanıcının email adresini yazınız.</p>
                            </div>
                            <div class="form-group">
                                <label>Kullanıcı Telefon</label>
                                <input class="form-control" name="phone">
                                <p class="help-block">Lütfen kullanıcının telefon numarasını yazınız.</p>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Kullanıcı Türü</label>
                                        <select class="form-control">
                                            <option>Seçiniz</option>
                                            <option value="0">Yönetici</option>
                                            <option value="1">Satış Personeli</option>
                                            <option value="2">Standart Kullanıcı</option>
                                            <option value="3">Muhasebe</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Kullanıcı Adı</label>
                                        <input class="form-control username" name="username">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Kurumsal E-Posta</label>
                                <p class="form-control-static email-area">email@gopanel.com</p>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Kimlik</label>
                                        <input type="file">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Diğer Belge</label>
                                        <input type="file">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-success">Kullanıcı Ekle</button>
                            <button type="reset" class="btn btn-danger">Formu Temizle</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            <img src="http://via.placeholder.com/200x200" style="width:200px; height:200px; margin:0 30%; border-radius:50%;"/>
                            <br />
                            <b style="margin-left:42%;">Profil Resmi</b>
                        </div>
                        <div class="form-group">
                            <label>Kullanıcı İsim</label>
                            <input class="form-control" disabled>
                        </div>
                        <div class="form-group">
                            <label>Kullanıcı Email</label>
                            <input class="form-control" disabled>
                        </div>
                        <div class="form-group">
                            <label>Telefon</label>
                            <input class="form-control" disabled>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" disabled>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <img src="http://via.placeholder.com/350x150" style="width:180px; height:100px;" alt="Alternate Text" />
                                <br />
                                <b>Kimlik</b>
                            </div>
                            <div class="col-lg-6">
                                <img src="http://via.placeholder.com/350x150" style="width:180px; height:100px;" alt="Alternate Text" />
                                <br />
                                <b>Diğer Belge</b>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<script>
    $(".username").keyup(function () {
        $(".email-area").text($(this).val() + "@@gopanel.com");
    });
</script>