@using Bitirme.Models.ViewModels
@model BookingModel
@{
    ViewBag.Title = "Rezervasyon Ekle";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!--<div class="panel-heading">
        Yeni Rezervasyon Ekle
    </div>-->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" method="post" action="@Url.Action("AddBooking", "Booking")">
                            <div class="form-group">
                                <label>Müşteri Adı</label>
                                <div class="form-group input-group">
                                    <input type="text" name="customerName" class="form-control">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <i class="fa fa-bars"></i>
                                        </button>
                                    </span>
                                </div>
                                <!--<p class="help-block">Example block-level help text here.</p>-->
                            </div>
                            <div class="form-group">
                                <label>Araç Seç</label>
                                <div class="form-group input-group">
                                    <input type="text" name="carPlate" class="form-control">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Satıcı Adı</label>
                                <div class="form-group input-group">
                                    <input type="text" name="sellerName" class="form-control">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label>Alış Tarihi:</label>
                                    <input name="startDate" class="form-control" type="datetime-local" />
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Teslim Tarihi:</label>
                                    <input name="endDate" class="form-control" type="datetime-local" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon">₺</span>
                                        <input type="text" class="form-control">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button">
                                                <i class="fa fa-exchange"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon">€</span>
                                        <input type="text" class="form-control">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button">
                                                <i class="fa fa-exchange"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon">$</span>
                                        <input type="text" class="form-control">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button">
                                                <i class="fa fa-exchange"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Sürücü Ehliyet</label>
                                        <input type="file">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Sürücü Kimlik</label>
                                        <input type="file">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea name="description" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="">Kasko
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="">GPS
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="">Bebek Koltuğu
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="">Ek Sürücü
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 center">
                                    <button type="submit" class="btn btn-success">Rezervasyon oluştur</button>
                                    <button type="reset" class="btn btn-danger">İptal Et</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">
                        <h1>Fiat Egea - Oto/Dizel - Orta Dizel Sedan</h1>
                        <form role="form">
                            <fieldset disabled>
                                <div class="form-group">
                                    <label for="disabledSelect">Araç Plaka</label>
                                    <input class="form-control" id="disabledInput" type="text" placeholder="34 SE 7022" disabled>
                                </div>
                            </fieldset>
                            <div class="row">
                                <div class="col-lg-12">
                                    <img style="width:100%; height:60%;" src="https://i.ytimg.com/vi/vDDF7TrURKA/maxresdefault.jpg" class="form-control" />
                                </div>
                            </div><br />
                            <div class="form-group">
                                <label>Ekstralar</label>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="" disabled>Kasko
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="" disabled>GPS
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="" disabled>Bebek Koltuğu
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="" disabled>Ek Sürücü
                                    </label>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               Son Rezervasyonlar
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Müşteri Adı</th>
                            <th>Satış Elemanı Adı</th>
                            <th>Araç Plaka</th>
                            <th>Araç ID</th>
                            <th>Baş. Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Notlar</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reservation in Model.Reservations)
            {
                if (reservation.ReservationID % 2 == 0)
                {
                    <tr class="odd gradeX">
                        <td>@reservation.ReservationID</td>
                        <td>@reservation.CustomerName</td>
                        <td>@reservation.SellerName</td>
                        <td>@reservation.CarPlateNumber</td>
                        <td>@reservation.CarID</td>
                        <td>@reservation.StartDate</td>
                        <td>@reservation.EndDate</td>
                        <td>@reservation.ReservationDescription</td>
                        <td>
                            <a href="#" class="btn-circle btn btn-warning"> <i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
    }
    else
    {
            <tr class="even gradeC">
                <td>@reservation.ReservationID</td>
                <td>@reservation.CustomerName</td>
                <td>@reservation.SellerName</td>
                <td>@reservation.CarPlateNumber</td>
                <td>@reservation.CarID</td>
                <td>@reservation.StartDate</td>
                <td>@reservation.EndDate</td>
                <td>@reservation.ReservationDescription</td>
                <td>
                    <a href="#" class="btn-circle btn btn-warning"> <i class="fa fa-edit"></i></a>
                </td>
            </tr>
}
}
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



<!-- DataTables JavaScript -->
<script src="../HTML/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="../HTML/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="../HTML/vendor/datatables-responsive/dataTables.responsive.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>