@using Bitirme.Models.ViewModels
@model BookingModel
@{
    ViewBag.Title = "Rezervasyon Düzenle";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!--<div class="panel-heading">
                Rezervasyon Düzenle
            </div>
             /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Müşteri Adı</th>
                            <th>Satış Elemanı Adı</th>
                            <th>Araç Plaka</th>
                            <th>Araç ID</th>
                            <th>Baş. Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Notlar</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reservation in Model.Reservations)
                        {
                            if (reservation.ReservationID % 2 == 0)
                            {
                                <tr class="odd gradeX">
                                    <td>@reservation.ReservationID</td>
                                    <td>@reservation.CustomerName</td>
                                    <td>@reservation.SellerName</td>
                                    <td>@reservation.CarPlateNumber</td>
                                    <td>@reservation.CarID</td>
                                    <td>@reservation.StartDate</td>
                                    <td>@reservation.EndDate</td>
                                    <td>@reservation.ReservationDescription</td>
                                    <td>
                                        <a id="@reservation.ReservationID" href="@Url.Action("EditReservation", "Booking", new { id = reservation.ReservationID })" class="btn-circle btn btn-warning updateRez"> <i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr class="even gradeC">
                                    <td>@reservation.ReservationID</td>
                                    <td>@reservation.CustomerName</td>
                                    <td>@reservation.SellerName</td>
                                    <td>@reservation.CarPlateNumber</td>
                                    <td>@reservation.CarID</td>
                                    <td>@reservation.StartDate</td>
                                    <td>@reservation.EndDate</td>
                                    <td>@reservation.ReservationDescription</td>
                                    <td>
                                        <a id="@reservation.ReservationID" href="@Url.Action("EditReservation", "Booking", new { id = reservation.ReservationID })" class="btn-circle btn btn-warning"> <i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- DataTables JavaScript -->
<script src="../HTML/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="../HTML/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="../HTML/vendor/datatables-responsive/dataTables.responsive.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>