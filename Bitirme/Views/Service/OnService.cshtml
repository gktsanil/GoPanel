@using Bitirme.Models.ViewModels
@model ServiceModel
@{
    ViewBag.Title = "Bakımdaki Araçlar";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- <div class="panel-heading">
        Servisteki Araçlar
    </div>
    /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Araç Plaka</th>
                            <th>Servis Adı</th>
                            <th>Servis Telefon</th>
                            <th>Servis Formu</th>
                            <th>Servis Giriş Tar.</th>
                            <th>Yapılan İşlemler</th>
                            <th>Notlar</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var service in Model.Services)
                        {
                            if (service.ServiceID % 2 == 0)
                            {
                                <tr class="odd gradeX">
                                    <td>@service.ServiceID</td>
                                    <td>@service.CarPlateNumber</td>
                                    <td>@service.ServiceName</td>
                                    <td>@service.ServicePhone</td>
                                    <td>@service.ServiceFormPath</td>
                                    <td>@service.ServiceDate</td>
                                    <td>@service.ServiceNote</td>
                                    <td>@service.ServiceDescription</td>
                                    <td class="center"><a href="#" class="btn btn-circle btn-warning"> <i class="fa fa-bars"></i> </a></td>
                                </tr>
                            }
                            else
                            {
                                <tr class="odd gradeX">
                                    <td>@service.ServiceID</td>
                                    <td>@service.CarPlateNumber</td>
                                    <td>@service.ServiceName</td>
                                    <td>@service.ServicePhone</td>
                                    <td>@service.ServiceFormPath</td>
                                    <td>@service.ServiceDate</td>
                                    <td>@service.ServiceNote</td>
                                    <td>@service.ServiceDescription</td>
                                    <td class="center"><a href="#" class="btn btn-circle btn-warning"> <i class="fa fa-bars"></i> </a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<!-- DataTables JavaScript -->
<script src="../HTML/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="../HTML/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="../HTML/vendor/datatables-responsive/dataTables.responsive.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>