@using Bitirme.Models.ViewModels
@model CarModel
@{
    ViewBag.Title = "Filo Düzenle";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- <div class="panel-heading">
         Filo Düzenle
     </div>
      /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Filo Adı :</label>
                            <input type="text" class="form-control product" placeholder="Filo Seçiniz" list="fleet">
                            <datalist id="fleet">
                                <option value="Hepsi" selected disabled>

                                    @{List<string> myBrands = new List<string>(); }

            @foreach (var brand in Model.Cars)
                                                {

                                                    if (!myBrands.Contains(brand.CarBrand))
                                                   {
                                                                                            myBrands.Add(brand.CarBrand);
<option value="@brand.CarBrand">@brand.CarBrand</option>
                                                             }
                        }

                                </datalist>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>İlk Tarih :</label>
                            <input type="date" class="form-control" placeholder="Başlangıç Tarihi Seçiniz" />
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <div class="form-group">
                                <label>Son Tarih :</label>
                                <input type="date" class="form-control" placeholder="Bitiş Tarihi Seçiniz" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <div class="form-group">
                                <label style="opacity:0;"> s</label>
                                <button class="form-control btn btn-success"> Filtrele </button>
                            </div>
                        </div>
                    </div>
                </div>
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Filo Adı</th>
                            <th>Araç Plaka</th>
                            <th>Marka/Model</th>
                            <th>Yıl</th>
                            <th>Son KM</th>
                            <th>Notlar</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model.Cars)
                        {
                            <tr class="odd gradeX">
                                <td>@car.CarID</td>
                                <td>@car.CarBrand</td>
                                <td>@car.CarPlateNumber</td>
                                <td>@car.CarBrand - @car.CarModel</td>
                                <td>@car.CarYear</td>
                                <td>@car.CarlastKM</td>
                                <td>@car.CarDescription</td>
                                <td><a href="#" class="btn btn-circle btn-warning"> <i class="fa fa-edit"></i> </a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<!-- DataTables JavaScript -->
<script src="../HTML/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="../HTML/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="../HTML/vendor/datatables-responsive/dataTables.responsive.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
                                        responsive: true
        });
                                });
</script>